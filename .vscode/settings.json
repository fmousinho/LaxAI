{
  // Basic Python Configuration
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.extraPaths": [
    "./shared_libs",
    "./services/service_training/src",
    "./services/service-api/src",
    "./services/service-cloud/src"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",

  // Environment Configuration
  "python.envFile": "${workspaceFolder}/.env",

  // Linting Configuration
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=120", "--ignore=E203,W503"],

  // File Associations and Exclusions
  "files.associations": {
    "*.code-workspace": "jsonc",
    "*.env": "properties",
    "Dockerfile*": "dockerfile"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.venv*": false,
    "**/wandb": true,
    "**/artifacts": false,
    "**/.DS_Store": true
  },

  // Editor Configuration
  "editor.rulers": [88, 120],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // Terminal Configuration
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/services/service_training/src:${workspaceFolder}/shared_libs:${workspaceFolder}/services/service_tracking/src:${workspaceFolder}/services/service-api/src:${workspaceFolder}/services/service-cloud/src"
  },

  // Python Testing Configuration for Service Training
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "--config-file=${workspaceFolder}/pytest.ini",
    "--rootdir=${workspaceFolder}",
    "services/service_training/tests",
    "-v",
    "-s"
  ],
  "python.testing.cwd": "${workspaceFolder}",
  "python.testing.unittestEnabled": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,

  // Environment Variables for Testing
  "python.testing.env": {
    "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/services/service_training/src:${workspaceFolder}/shared_libs:${workspaceFolder}/services/service_tracking/src:${workspaceFolder}/services/service-api/src:${workspaceFolder}/services/service-cloud/src"
  },

  // Search Configuration
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/wandb": true,
    "**/artifacts": true
  }
}
