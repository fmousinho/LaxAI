{
  // Python   // Multi-Service Testing Configuration - Simplified for VS Code Discovery
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "test_simple_discovery.py",
    "tests/integration/test_model_training_devices.py",
    "tests/integration/test_wandb_online.py",
    "tests/performance/test_batch_size_flow.py",
    "--tb=short",
    "-q"
  ],ration - Updated for Multi-Service Architecture
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.extraPaths": [
    "./shared_libs",
    "./services/service-tracking/src",
    "./services/service-training/src",
    "./services/service-api/src",
    "./services/service-cloud/src"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",

  // Multi-Service Testing Configuration
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "--rootdir=${workspaceFolder}",
    "--tb=short",
    "-v"
  ],
  "python.testing.cwd": "${workspaceFolder}",
  "python.testing.unittestEnabled": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,

  // Environment Configuration
  "python.envFile": "${workspaceFolder}/.env",

  // Linting Configuration
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=120", "--ignore=E203,W503"],

  // File Associations and Exclusions
  "files.associations": {
    "*.code-workspace": "jsonc",
    "*.env": "properties",
    "Dockerfile*": "dockerfile"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.venv*": false,
    "**/wandb": true,
    "**/artifacts": false,
    "**/.DS_Store": true
  },

  // Editor Configuration
  "editor.rulers": [88, 120],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // Terminal Configuration - Updated for Multi-Service
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}/shared_libs:${workspaceFolder}/services/service-tracking/src:${workspaceFolder}/services/service-training/src:${workspaceFolder}/services/service-api/src:${workspaceFolder}/services/service-cloud/src"
  },

  // Search Configuration
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/wandb": true,
    "**/artifacts": true
  }
}
