# LaxAI Cloud Infrastructure Configuration
# Simple shared configuration for all deployment files

# Basic Settings
export GOOGLE_CLOUD_PROJECT="${GOOGLE_CLOUD_PROJECT:-}"
export CLOUD_REGION="us-central1"
export GPU_TYPE="nvidia-l4"

# Service Account
export SERVICE_ACCOUNT="googlebatch"

# Registry
export REGISTRY_REPO="laxai-repo"
export REGISTRY_BASE="${CLOUD_REGION}-docker.pkg.dev/${GOOGLE_CLOUD_PROJECT}/${REGISTRY_REPO}"

# Resources (consistent across all services)
export CPU_LIMIT="4000m"
export MEMORY_LIMIT="16Gi"
export GPU_COUNT="1"

# Pub/Sub
export PUBSUB_TOPIC="training-jobs"
export PUBSUB_SUBSCRIPTION="training-jobs-sub"

# Timeouts
export TRAINING_TIMEOUT="36000"  # 10 hours
export FUNCTION_TIMEOUT="60"     # 1 minute

# Requirements
export GPU_REQS="requirements-cpu.txt"
export CLOUD_REQS="requirements-cloud.txt"
